{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 2016
  },
  "env": {
    "browser": true
  },
  "extends": "standard",
  "rules": {
    "indent": [
      "error",
      4,
      {
        "SwitchCase": 1,
        "MemberExpression": 1
      }
    ],
    "quotes": [
      "error",
      "double"
    ],
    "no-console": "off",
    "semi": [
      "error",
      "always"
    ],
    "padded-blocks": "off",
    "space-before-function-paren": "off"
  }
}
